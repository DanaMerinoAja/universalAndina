---
import Layout from '@layouts/Layout.astro';
import { siteConfig } from '@data/config';
import { Mail, Phone, MapPin } from 'lucide-astro';
import { Image } from 'astro:assets';
import homeImage from 'src/assets/images/home/default-home.jpg'

const seoTitle = "Page Not Found";
const seoDescription = "The page you're looking for doesn't exist or has been moved.";
---

<Layout title={seoTitle} description={seoDescription} contacto={true} isIndex={false}>
    <div class="w-full min-h-[80vh] flex items-center">
        <div class="absolute inset-0 left-0 top-0 w-full h-full overflow-hidden">
            <Image
                src={homeImage}
                alt="Background image"
                width={1920}
                height={1920}
                class="w-full h-full object-cover"
                quality={70}
                format="webp"
                loading="eager"
                decoding="async"
            />
        </div>
        <div class="absolute inset-0 bg-black/50"></div>
        <div class="site-container mx-auto md:p-20text-left z-10 bg-primary pb-10 pt-10">
            <div class="site-container px-4">
                <h1 class="text-white font-bold">Contacto</h1>
                <p class="text-white">Estamos aqu√≠ para ayudarte.</p>
                <div class:list={["flex flex-col gap-2 mt-4", "text-white"]}>
                <div class:list={["flex items-center gap-2"]}><Mail aria-hidden="true" /> <a class="text-white" href={`mailto:${siteConfig.Socials.Email}`}>{siteConfig.Socials.Email}</a></div>
                <div class:list={["flex items-center gap-2"]}><Phone aria-hidden="true" /> <a class="text-white" href={`tel:${siteConfig.Socials.Phone}`}>{siteConfig.Socials.Phone}</a></div>
                <div class:list={["flex items-center gap-2"]}><MapPin aria-hidden="true" /> <a class="text-white" href={`https://maps.google.com/?q=${siteConfig.Socials.TrueLocation}`}>{siteConfig.Socials.Location}</a></div>                    </div>
            </div>
        </div>
    </div>
</Layout>