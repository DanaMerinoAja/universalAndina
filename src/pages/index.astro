---
import Layout from '@layouts/Layout.astro';
import Hero from '@components/sections/Hero.astro';
import Features from '@components/sections/Features.astro';
import { featureLists } from '@data/features';
import Logos from '@components/sections/Logos.astro';
import { logoLists } from '@data/logos';
import Faqs from '@components/sections/Faqs.astro';
import { faqLists } from '@data/faqs';
import homeImage from '../assets/images/home/default-home.jpg';
const seoTitle = "Modern, High-Performance Astro Theme";
const seoDescription = "A modern, high-performance Astro theme for developer portfolios and documentation sites.";

const heroContent = {
    title: '',
    description: 'Especialistas en mantenimiento mecánico',
    buttons: [
        {
            text: 'Contáctanos',
            link: '#contacto',
            target: '_self'
        }
    ],
    backgroundImage: homeImage,
    overlayOpacity: 0.2
}

const featuresSection = {
    eyebrow: "",
    title: "Nuestros servicios",
    description: "",
    features: featureLists.main.features
}

const logosSection = {
    eyebrow: "Nuestros clientes",
    logos: logoLists.main.logos
}

const faqsSection = {
    eyebrow: "Conócenos",
    title: '¿Quiénes somos?',
    description: 'Somos una empresa cajamarquina especializada en proporcionar soluciones en el rubro de mantenimiento mecánico de sistemas de bombeo (bombas, motores y electrobombas), así como mantenimiento de maquinaria especializada.',
    faqs: faqLists.main.faqs
}
---

<Layout title={seoTitle} description={seoDescription}>
    <section id="inicio" class="mb-12">
        <Hero content={heroContent} />    
    </section>
    <section id="nosotros" class="mb-12">
        <Faqs content={faqsSection} background="base" padding="base" />
    </section>
    <section id="servicios" class="mb-12">
        <Features content={featuresSection} padding="base" background="light" />
        <Logos content={logosSection} background="base" padding='small'/>
    </section>    
</Layout>